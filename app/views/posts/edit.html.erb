<%= form_tag(posts_edit_path, method: "patch") do %>
	<h1>Edit Post Here</h1>
	<div class="post-field">
	<%= label_tag("Title: ") %>
	<%= text_field_tag("title") %>
	</div>

	<div class="post-field">
		<%= label_tag("Content: ") %>
		<%= text_area_tag("content") %>
	</div>

	<%= button_tag("Save!") %>
<% end %>